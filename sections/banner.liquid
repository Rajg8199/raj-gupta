  Hero Banner Section - FINAL FIXED VERSION
  - Logo always centered on mobile
  - Hamburger and close button in same position
{% endcomment %}

<style>
/* ========================================
   CSS Reset & Base Styles
   ======================================== */
.hero-banner {
  position: relative;
  width: 100%;
  overflow: visible;
}

.hero-banner * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* ========================================
   Container & Layout
   ======================================== */
.hero-banner__container {
  position: relative;
  max-width: 100%;
  margin: 0 auto;
  padding: 40px;
  min-height: 710px;
  display: flex;
  align-items: flex-end;
}

/* Ultra-wide (4K) optimization */
@media screen and (min-width: 1920px) {
  .hero-banner__container {
    padding: 80px;
    min-height: 80vh;
  }
  h1.hero-banner__heading {
    font-size: 130px;
  }
  .hero-banner__content {
    max-width: 100% !important;
    gap: 80px !important;
  }
  p.hero-banner__description { 
    font-size: 38px;
    max-width: 900px;
  }
  a.hero-banner__button {
    font-size: 28px;
    width: 420px;
    padding: 30px;
  }
  p.hero-banner__footer-text {
    font-size: 36px;
  }
  a.hero-banner__top-bar-button {
    font-size: 28px;
    padding: 16px 40px;
    gap: 20px;
  }
  a.hero-banner__top-bar-button svg {
    width: 50px;
    height: 50px;
  }
  .hero-banner__top-bar-text {
    font-size: 36px !important;
  }
  .hero-banner__brand {
    width: 320px !important;
  }
}

@media screen and (min-width: 3000px) {
  .hero-banner__container {
    padding: 120px 120px 200px 120px;
    min-height: 80vh;
  }
  h1.hero-banner__heading {
    font-size: 165px;
  }
  .hero-banner__content {
    max-width: 100% !important;
    gap: 102px !important;
  }
  p.hero-banner__description {
    font-size: 48px;
    max-width: 1150px;
  }
  a.hero-banner__button {
    font-size: 38px;
    width: 520px;
    padding: 30px;
  }
  p.hero-banner__footer-text {
    font-size: 42px;
  }
  a.hero-banner__top-bar-button {
    font-size: 42px;
    padding: 20px 60px;
    gap: 30px;
  }
  a.hero-banner__top-bar-button svg {
    width: 64px;
    height: 64px;
  }
  .hero-banner__top-bar-text {
    font-size: 42px !important;
  }
  .hero-banner__brand {
    width: 400px !important;
  }
}

/* Background Image */
.hero-banner__background {
  position: absolute;
  inset: 0;
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  z-index: 1;
}

/* Mobile background image */
.hero-banner__background-mobile {
  display: none;
}

@media screen and (max-width: 989px) {
  .hero-banner__background-desktop {
    display: none;
  }
  
  .hero-banner__background-mobile {
    display: block;
    position: absolute;
    inset: 0;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    z-index: 1;
  }
}

/* ========================================
   Left Content Area
   ======================================== */
.hero-banner__content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  gap: 32px;
  max-width: 540px;
}

/* Brand */
.hero-banner__brand {
  width: 150px;
}

.hero-banner__brand img {
  max-width: 100%;
  height: auto;
  display: block;
}

/* Heading */
.hero-banner__heading {
  font-family: 'Jost-Medium';
  font-weight: 700;
  line-height: 100%;
  color: black;
  font-size: clamp(48px, 3.5vw, 88px);
}

@media screen and (max-width: 989px) {
  .hero-banner__heading {
    text-align: center;
  }
}

/* Description */
.hero-banner__description {
  font-family: 'Jost-Regular';
  line-height: 140%;
  color: black;
  max-width: 485px;
  font-size: clamp(16px, 1.2vw, 26px);
}

@media screen and (max-width: 989px) {
  .hero-banner__description {
    text-align: center;
    max-width: 100%;
  }
}

/* ========================================
   Button Styles
   ======================================== */
.hero-banner__button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  width: fit-content;
  padding: clamp(14px, 1vw, 20px) clamp(32px, 2vw, 48px);
  background-color: black;
  color: white;
  font-family: 'Jost-Regular';
  font-weight: 600;
  letter-spacing: 1px;
  text-transform: uppercase;
  text-decoration: none;
  cursor: pointer;
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  font-size: clamp(14px, 0.9vw, 18px);
}

.hero-banner__button::before {
  content: '';
  position: absolute;
  inset: 0;
  background: #FFF544;
  transform: translateX(-100%);
  transition: transform 0.5s ease;
}

.hero-banner__button:hover::before {
  transform: translateX(100%);
}

.hero-banner__button:hover {
  background-color: #2d2d2d;
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.hero-banner__button-arrow {
  display: inline-flex;
  transition: transform 0.3s ease;
}

.hero-banner__button:hover .hero-banner__button-arrow {
  transform: translateX(4px);
}

/* ========================================
   Top Bar - Desktop
   ======================================== */
.hero-banner__top-bar {
  background-color: #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16px;
  padding: 10px 50px;
  max-width: 100%;
  margin: 0 auto;
}

.hero-banner__top-bar-text {
  font-family: 'Jost-Regular';
  font-size: 16px;
  color: black;
}

.hero-banner__top-bar-button {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 10px 24px;
  background-color: #FFF544;
  color: black;
  font-family: 'Jost-Regular';
  font-weight: 600;
  text-transform: uppercase;
  text-decoration: none;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.hero-banner__top-bar-button:hover {
  background-color: black;
  color: white;
  transform: translateX(4px);
}

/* Hide hamburger on desktop */
.hero-banner__hamburger {
  display: none;
}

/* ========================================
   Mobile Menu Overlay - FULL PAGE
   ======================================== */
.hero-banner__mobile-menu {
  display: none;
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  height: 100dvh;
  background-color: #f5f5f5;
  z-index: 999999;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 40px;
  padding: 80px 20px 60px;
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  overflow-y: auto;
}

.hero-banner__mobile-menu.active {
  display: flex;
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

/* Close button in SAME position as hamburger */
.hero-banner__mobile-menu-close {
  position: absolute;
  top: 15px;
  left: 20px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px;
  line-height: 1;
  color: black;
  z-index: 100000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-banner__mobile-menu-close svg {
  width: 20px;
  height: 20px;
  transition: transform 0.3s ease;
}

.hero-banner__mobile-menu-close:hover svg {
  transform: rotate(90deg);
}

/* Brand logo in mobile menu - centered */
.hero-banner__mobile-menu-brand {
  position: absolute;
  top: 15px;
  left: 50%;
  transform: translateX(-50%);
  width: 150px;
  z-index: 99999;
}

.hero-banner__mobile-menu-brand img {
  width: 100%;
  height: auto;
}

.hero-banner__mobile-menu-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 30px;
  text-align: center;
  max-width: 500px;
  width: 100%;
}

/* Button in mobile menu should be visible */
.hero-banner__mobile-menu-content .hero-banner__top-bar-button {
  display: inline-flex !important;
  padding: 10px 24px;
  font-size: 14px;
}

.hero-banner__mobile-menu-text {
  font-family: 'Jost-Regular';
  font-size: 18px;
  line-height: 140%;
  color: black;
  padding: 0 20px;
}

/* Ultra-wide top bar */
@media screen and (min-width: 1920px) {
  .hero-banner__top-bar {
    padding: 16px 80px;
  }
}

@media screen and (min-width: 3000px) {
  .hero-banner__top-bar {
    padding: 20px 120px;
  }
}

/* ========================================
   Footer
   ======================================== */
.hero-banner__footer {
  background-color: #f5f5f5;
  max-width: 100%;
  margin: 0 auto;
  padding: 10px 40px;
  text-align: center;
}

.hero-banner__footer-text {
  font-family: 'Jost-Regular';
  font-size: clamp(12px, 0.8vw, 16px);
  letter-spacing: 1px;
  text-transform: uppercase;
}

/* Ultra-wide footer */
@media screen and (min-width: 1920px) {
  .hero-banner__footer {
    padding: 16px 80px;
  }
}

@media screen and (min-width: 3000px) {
  .hero-banner__footer {
    padding: 20px 120px;
  }
}

/* ========================================
   Mobile Responsive - FIXED LAYOUT
   ======================================== */
@media screen and (max-width: 989px) {
  /* Top bar - GRID layout for perfect centering */
  .hero-banner__top-bar {
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    padding: 15px 20px;
    gap: 0;
    position: relative;
    z-index: 100;
  }

  /* Hamburger on left */
  .hero-banner__hamburger {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    grid-column: 1;
  }

  .hero-banner__hamburger svg {
    width: 20px;
    height: 12px;
  }

  /* Brand centered using absolute positioning */
  .hero-banner__brand {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: auto !important;
  }

  .hero-banner__brand img {
    width: 150px;
    height: auto;
  }

  /* Hide desktop text */
  .hero-banner__top-bar-text {
    display: none;
  }

  /* Button hidden on mobile top bar */
  .hero-banner__top-bar-button {
    display: none;
  }

  /* Hero content - CENTERED ON MOBILE */
  .hero-banner__container {
    padding: 80px 24px 60px;
    min-height: 500px;
    align-items: center;
    justify-content: center;
  }

  .hero-banner__content {
    max-width: 100%;
    gap: 24px;
    align-items: center;
  }

  .hero-banner__heading {
    font-size: 40px;
  }

  .hero-banner__description {
    font-size: 15px;
  }

  /* Center button on mobile */
  .hero-banner__button {
    align-self: center;
  }

  .hero-banner__footer {
    padding: 12px 24px;
  }
}

@media screen and (max-width: 749px) {
  .hero-banner__container {
    padding: 70px 16px 50px;
    min-height: 450px;
  }

  .hero-banner__heading {
    font-size: 32px;
  }

  .hero-banner__brand img {
    width: 120px;
  }
}

/* ========================================
   Animations
   ======================================== */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.hero-banner__content > * {
  animation: fadeInUp 0.6s ease-out backwards;
}

.hero-banner__heading { animation-delay: 0.2s; }
.hero-banner__description { animation-delay: 0.3s; }
.hero-banner__button { animation-delay: 0.4s; }

/* Prevent body scroll when menu is open */
body.menu-open {
  overflow: hidden;
}

/* Hide top bar when mobile menu is active */
body.menu-open .hero-banner__top-bar {
  display: none;
}
</style>

