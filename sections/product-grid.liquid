<style>
/* ========================================
   CSS Reset & Base Styles
======================================== */
.product-grid-section {
  position: relative;
  width: 100%;
  margin: 0 auto;
  max-width: 1440px;
  display: flex;
  padding: 90px 52px 0 52px;
  gap: 30px;
  flex-direction: column;
}

.product-grid-section * {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

h2.product-grid__heading {
  font-size: 36px;
  line-height: 120%;
  font-family: 'Jost-Regular', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Arial, sans-serif;
}

/* ========================================
   GRID
======================================== */
.product-grid__container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

/* ========================================
   PRODUCT CARD
======================================== */
.product-card {
  position: relative;
  aspect-ratio: 1/1;
  overflow: hidden;
  background: #f5f5f5;
}

.product-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform .4s ease;
}

.product-card:hover .product-card__image {
  transform: scale(1.05);
}

.product-card__quick-view {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity .3s ease;
}

.product-card:hover .product-card__quick-view {
  opacity: 1;
}

.product-card__quick-view button {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: none;
  background: #fff;
  cursor: pointer;
}

/* ========================================
   MODAL
======================================== */
.quick-view-modal {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.6);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.quick-view-modal.active {
  display: flex;
}

.quick-view-modal__content {
  width: 380px;
  max-height: 90vh;
  background: #fff;
  overflow-y: auto;
  position: relative;
}

/* Close */
.quick-view-modal__close {
  position: absolute;
  top: 16px;
  right: 16px;
  border: none;
  background: none;
  cursor: pointer;
}

/* ========================================
   ðŸ”¥ FIXED MODAL LAYOUT (FIGMA MATCH)
======================================== */
.quick-view-modal__top {
  display: grid;
  grid-template-columns: 120px 1fr;
  gap: 16px;
  padding: 24px;
}

.quick-view-modal__image {
  width: 100%;
  height: 150px;
  object-fit: cover;
}

.quick-view-modal__info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.quick-view-modal__title {
  font-size: 18px;
  font-weight: 500;
}

.quick-view-modal__price {
  font-size: 16px;
  font-weight: 500;
}

.quick-view-modal__description {
  font-size: 14px;
  line-height: 1.4;
  color: #666;
}

/* ========================================
   OPTIONS
======================================== */
.quick-view-modal__details {
  padding: 24px;
}

.quick-view-modal__option-label {
  font-size: 13px;
  font-weight: 600;
  margin-bottom: 8px;
}

.quick-view-modal__color-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
}

.quick-view-modal__color-option {
  padding: 12px;
  border: 2px solid #e0e0e0;
  background: #fff;
  cursor: pointer;
}

.quick-view-modal__color-option.selected {
  background: #000;
  color: #fff;
  border-color: #000;
}

.quick-view-modal__size-select {
  width: 100%;
  padding: 12px;
  border: 1px solid #e0e0e0;
}

/* ========================================
   ADD TO CART
======================================== */
.quick-view-modal__add-to-cart {
  width: 100%;
  padding: 16px;
  margin-top: 24px;
  background: #000;
  color: #fff;
  border: none;
  cursor: pointer;
}

/* ========================================
   MOBILE
======================================== */
@media(max-width: 749px){
  .product-grid__container {
    grid-template-columns: repeat(2,1fr);
  }

  .quick-view-modal__top {
    grid-template-columns: 1fr;
  }

  .quick-view-modal__image {
    height: 220px;
  }
}
</style>

<section class="product-grid-section">
  <h2 class="product-grid__heading">{{ section.settings.vision_text }}</h2>

  <div class="product-grid__container">
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      {% if product %}
        <div class="product-card">
          <img class="product-card__image" src="{{ product.featured_image | image_url: width: 800 }}">
          <div class="product-card__quick-view">
            <button data-product-id="{{ product.id }}">+</button>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- MODAL -->
<div class="quick-view-modal" id="quickViewModal">
  <div class="quick-view-modal__content">
    <button class="quick-view-modal__close">âœ•</button>

    <div class="quick-view-modal__top">
      <img class="quick-view-modal__image" id="qvImage">
      <div class="quick-view-modal__info">
        <h2 id="qvTitle"></h2>
        <p id="qvPrice"></p>
        <p id="qvDescription"></p>
      </div>
    </div>

    <div class="quick-view-modal__details">
      <div id="qvColor"></div>
      <div id="qvSize"></div>

      <input type="hidden" id="variantId">

      <button class="quick-view-modal__add-to-cart" id="qvAddToCart">
        ADD TO CART â†’
      </button>
    </div>
  </div>
</div>

<script>
(function(){
  const modal = document.getElementById('quickViewModal');
  const closeBtn = modal.querySelector('.quick-view-modal__close');

  let currentProduct = null;
  let selectedOptions = {};
  let bundleVariantId = null;

  const products = {
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      {% if product %}
        {{ product.id }}: {{ product | json }},
      {% endif %}
    {% endfor %}
  };

  document.querySelectorAll('[data-product-id]').forEach(btn => {
    btn.onclick = () => openModal(btn.dataset.productId);
  });

  closeBtn.onclick = () => modal.classList.remove('active');

  function openModal(id){
    currentProduct = products[id];
    selectedOptions = {};

    qvImage.src = currentProduct.featured_image;
    qvTitle.textContent = currentProduct.title;
    qvPrice.textContent = Shopify.formatMoney(currentProduct.price);
    qvDescription.textContent = currentProduct.description.replace(/<[^>]+>/g,'');

    renderOptions();
    modal.classList.add('active');
  }

  function renderOptions(){
    qvColor.innerHTML = '';
    qvSize.innerHTML = '';

    currentProduct.options.forEach((opt, idx) => {
      if(opt.name.toLowerCase() === 'color'){
        qvColor.innerHTML = '<p class="quick-view-modal__option-label">Color</p><div class="quick-view-modal__color-grid"></div>';
        opt.values.forEach(v => {
          const b = document.createElement('button');
          b.className = 'quick-view-modal__color-option';
          b.textContent = v;
          b.onclick = () => {
            document.querySelectorAll('.quick-view-modal__color-option').forEach(x=>x.classList.remove('selected'));
            b.classList.add('selected');
            selectedOptions['option'+(idx+1)] = v;
            updateVariant();
          };
          qvColor.querySelector('.quick-view-modal__color-grid').appendChild(b);
        });
      }

      if(opt.name.toLowerCase() === 'size'){
        qvSize.innerHTML = '<p class="quick-view-modal__option-label">Size</p><select class="quick-view-modal__size-select"><option value="">Choose size</option></select>';
        const s = qvSize.querySelector('select');
        opt.values.forEach(v => {
          s.innerHTML += `<option>${v}</option>`;
        });
        s.onchange = e => {
          selectedOptions['option'+(idx+1)] = e.target.value;
          updateVariant();
        };
      }
    });
  }

  function updateVariant(){
    const v = currentProduct.variants.find(v =>
      Object.keys(selectedOptions).every(k => v[k] === selectedOptions[k])
    );
    if(v) variantId.value = v.id;
  }

  qvAddToCart.onclick = async () => {
    if(!variantId.value) return alert('Select options');

    await fetch('/cart/add.js',{
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body:JSON.stringify({id:variantId.value,quantity:1})
    });

    const values = Object.values(selectedOptions).map(v=>v.toLowerCase());
    if(values.includes('black') && values.includes('medium')){
      if(!bundleVariantId){
        const r = await fetch('/products/soft-winter-jacket.js');
        const d = await r.json();
        bundleVariantId = d.variants[0].id;
      }
      await fetch('/cart/add.js',{
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body:JSON.stringify({id:bundleVariantId,quantity:1})
      });
    }

    const cart = await fetch('/cart.js').then(r=>r.json());
    document.documentElement.dispatchEvent(new CustomEvent('cart:updated',{detail:cart}));
    document.querySelector('cart-drawer')?.open();

    modal.classList.remove('active');
  };
})();
</script>

