<style>
/* ===============================
   GRID
================================ */
.product-grid-section {
  max-width: 1440px;
  margin: auto;
  padding: 80px 48px 0;
}

.product-grid__heading {
  font-size: 36px;
  margin-bottom: 40px;
}

.product-grid__container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
}

/* ===============================
   PRODUCT CARD
================================ */
.product-card {
  position: relative;
  aspect-ratio: 1 / 1;
  overflow: hidden;
  cursor: pointer;
}

.product-card img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-card__quick-view {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255,255,255,.6);
  opacity: 0;
  transition: opacity .3s;
}

.product-card:hover .product-card__quick-view {
  opacity: 1;
}

.product-card__quick-view button {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  border: none;
  background: #fff;
  cursor: pointer;
}

/* ===============================
   MODAL
================================ */
.quick-view-modal {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,.6);
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.quick-view-modal.active {
  display: flex;
}

.quick-view-modal__content {
  background: #fff;
  width: 380px;
  max-height: 90vh;
  overflow-y: auto;
  position: relative;
}

.quick-view-modal__close {
  position: absolute;
  top: 16px;
  right: 16px;
  background: none;
  border: none;
  cursor: pointer;
}

/* ===============================
   MODAL TOP (PIXEL PERFECT)
================================ */
.quick-view-modal__top {
  display: grid;
  grid-template-columns: 120px 1fr;
  gap: 16px;
  padding: 24px;
}

.quick-view-modal__image {
  width: 100%;
  height: 150px;
  object-fit: cover;
}

.quick-view-modal__info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.quick-view-modal__title {
  font-size: 18px;
}

.quick-view-modal__price {
  font-size: 16px;
}

.quick-view-modal__description {
  font-size: 14px;
  color: #666;
}

/* ===============================
   OPTIONS
================================ */
.quick-view-modal__details {
  padding: 24px;
}

.option-label {
  font-size: 13px;
  margin-bottom: 8px;
}

.color-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
}

.color-btn {
  border: 2px solid #ddd;
  padding: 10px;
  background: #fff;
  cursor: pointer;
}

.color-btn.active {
  background: #000;
  color: #fff;
  border-color: #000;
}

select {
  width: 100%;
  padding: 12px;
  border: 1px solid #ddd;
}

/* ===============================
   ADD TO CART
================================ */
.add-to-cart {
  width: 100%;
  padding: 16px;
  background: #000;
  color: #fff;
  border: none;
  margin-top: 24px;
  cursor: pointer;
}

/* ===============================
   MOBILE
================================ */
@media(max-width: 749px){
  .product-grid__container {
    grid-template-columns: repeat(2,1fr);
  }

  .quick-view-modal__top {
    grid-template-columns: 1fr;
  }

  .quick-view-modal__image {
    height: 220px;
  }
}
</style>

<section class="product-grid-section">
  <h2 class="product-grid__heading">{{ section.settings.vision_text }}</h2>

  <div class="product-grid__container">
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      {% if product %}
        <div class="product-card">
          <img src="{{ product.featured_image | image_url: width: 800 }}">
          <div class="product-card__quick-view">
            <button data-open="{{ product.id }}">+</button>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

<!-- MODAL -->
<div class="quick-view-modal" id="quickView">
  <div class="quick-view-modal__content">
    <button class="quick-view-modal__close">✕</button>

    <div class="quick-view-modal__top">
      <img class="quick-view-modal__image" id="qvImage">
      <div class="quick-view-modal__info">
        <h2 id="qvTitle"></h2>
        <p id="qvPrice"></p>
        <p id="qvDesc"></p>
      </div>
    </div>

    <div class="quick-view-modal__details">
      <div id="qvColors"></div>
      <div id="qvSizes"></div>

      <input type="hidden" id="variantId">
      <button class="add-to-cart" id="addToCart">ADD TO CART →</button>
    </div>
  </div>
</div>

<script>
(() => {
  const modal = document.getElementById('quickView');
  const closeBtn = modal.querySelector('.quick-view-modal__close');

  let currentProduct, selected = {}, bundleVariantId = null;

  const products = {
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      {% if product %}
        {{ product.id }}: {{ product | json }},
      {% endif %}
    {% endfor %}
  };

  document.querySelectorAll('[data-open]').forEach(btn => {
    btn.onclick = () => openModal(btn.dataset.open);
  });

  closeBtn.onclick = () => modal.classList.remove('active');

  function openModal(id) {
    currentProduct = products[id];
    selected = {};

    document.getElementById('qvImage').src = currentProduct.featured_image;
    document.getElementById('qvTitle').textContent = currentProduct.title;
    document.getElementById('qvPrice').textContent = Shopify.formatMoney(currentProduct.price);
    document.getElementById('qvDesc').textContent = currentProduct.description.replace(/<[^>]+>/g,'');

    renderOptions();
    modal.classList.add('active');
  }

  function renderOptions() {
    const colors = document.getElementById('qvColors');
    const sizes = document.getElementById('qvSizes');
    colors.innerHTML = sizes.innerHTML = '';

    currentProduct.options.forEach((opt, i) => {
      if (opt.name.toLowerCase() === 'color') {
        colors.innerHTML = `<p class="option-label">Color</p><div class="color-grid"></div>`;
        opt.values.forEach(v => {
          const b = document.createElement('button');
          b.textContent = v;
          b.className = 'color-btn';
          b.onclick = () => {
            document.querySelectorAll('.color-btn').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            selected['option'+(i+1)] = v;
            updateVariant();
          };
          colors.querySelector('.color-grid').appendChild(b);
        });
      }

      if (opt.name.toLowerCase() === 'size') {
        sizes.innerHTML = `<p class="option-label">Size</p><select></select>`;
        const s = sizes.querySelector('select');
        s.innerHTML = `<option value="">Choose your size</option>` +
          opt.values.map(v => `<option>${v}</option>`).join('');
        s.onchange = e => {
          selected['option'+(i+1)] = e.target.value;
          updateVariant();
        };
      }
    });
  }

  function updateVariant() {
    const v = currentProduct.variants.find(v =>
      Object.keys(selected).every(k => v[k] === selected[k])
    );
    if (v) document.getElementById('variantId').value = v.id;
  }

  document.getElementById('addToCart').onclick = async () => {
    const id = document.getElementById('variantId').value;
    if (!id) return alert('Select options');

    await fetch('/cart/add.js', {
      method: 'POST',
      headers: {'Content-Type':'application/json'},
      body: JSON.stringify({id, quantity:1})
    });

    if (Object.values(selected).map(v=>v.toLowerCase()).includes('black') &&
        Object.values(selected).map(v=>v.toLowerCase()).includes('medium')) {
      if (!bundleVariantId) {
        const r = await fetch('/products/soft-winter-jacket.js');
        const d = await r.json();
        bundleVariantId = d.variants[0].id;
      }
      await fetch('/cart/add.js', {
        method:'POST',
        headers:{'Content-Type':'application/json'},
        body:JSON.stringify({id:bundleVariantId,quantity:1})
      });
    }

    const cart = await fetch('/cart.js').then(r=>r.json());
    document.documentElement.dispatchEvent(new CustomEvent('cart:updated',{detail:cart}));
    document.querySelector('cart-drawer')?.open();
    modal.classList.remove('active');
  };
})();
</script>

{% schema %}
{
  "name": "Product Grid",
  "tag": "section",
  "class": "section-product-grid",
  "settings": [
    {
      "type": "text",
      "id": "vision_text",
      "label": "Vision text",
      "default": "Tisso vision in the wild"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "header",
          "content": "Auto-Bundle Settings"
        },
        {
          "type": "text",
          "id": "bundle_variant_check",
          "label": "Bundle trigger variants",
          "info": "Enter variant options separated by commas (e.g., 'Black, Medium'). When this product is added with these options, the bundle product will be added automatically.",
          "placeholder": "Black, Medium"
        },
        {
          "type": "text",
          "id": "bundle_product_handle",
          "label": "Bundle product handle",
          "info": "The handle of the product to add automatically (e.g., 'soft-winter-jacket')"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Grid",
      "category": "Custom"
    }
  ]
}
